{
  "rules": {
    "users": {
      "$uid": {
        ".read": "auth != null && $uid === auth.uid || $uid.beginsWith('local_')",
        ".write": "auth != null && $uid === auth.uid || $uid.beginsWith('local_')"
      }
    },
    "publicBooks": {
      "$bookId": {
        ".read": true,
        ".write": true
      }
    }
  }
}